<%= form_for(@recipe, id: 'new_recipe') do |f| %>
    <%= f.text_field :name %>
    <%= f.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name) do |i| %>
        <%= i.label class:"label-checkbox" do%>
            <%=i.check_box + i.text%>
        <%end%>
    <% end %>

    <%= f.submit %>
<% end %>